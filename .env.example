# ==========================================
# Environment Configuration
# ==========================================
# Copy this file to .env and customize for your environment
# cp .env.example .env

# ==========================================
# Security
# ==========================================

# JWT Secret (REQUIRED in production)
# Must be at least 256 bits (32 characters)
# Generate with: openssl rand -base64 32
JWT_SECRET=default-secret-key-change-this-in-production-minimum-256-bits

# Redis Password (recommended for production)
REDIS_PASSWORD=

# ==========================================
# Logging
# ==========================================

# Log Level: TRACE, DEBUG, INFO, WARN, ERROR
LOG_LEVEL=INFO

# Node ID (for distributed deployment)
NODE_ID=node-1

# ==========================================
# Monitoring
# ==========================================

# Grafana Credentials
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# ==========================================
# Performance Tuning
# ==========================================

# Cache Settings
CACHE_L1_MAX_SIZE=10000
CACHE_L1_EXPIRE_WRITE=5
CACHE_L1_EXPIRE_ACCESS=2
CACHE_L2_TTL=10

# Stream Settings
STREAM_MAX_PENDING_CHUNKS=1000
STREAM_BACKPRESSURE_DELAY=10
STREAM_RECOVERY_TIMEOUT=5

# ==========================================
# Feature Flags
# ==========================================

# Enable Kafka event sourcing
KAFKA_ENABLED=true

# ==========================================
# Development vs Production
# ==========================================

# Set to 'production' for production deployment
ENVIRONMENT=development
